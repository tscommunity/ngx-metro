{
  "$schema": "http://json-schema.org/schema",
  "$id": "ngx-metro/layout",
  "title": "Create a basic layout",
  "description": "NOTE: Does not work in the --dry-run mode",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "The title of your application",
      "default": "ngx-metro",
      "x-prompt": "What is the title of your app?"
    },
    "color": {
      "type": "string",
      "description": "The color of the appbar",
      "default": "red",
      "x-prompt": "What color should the appbar have?"
    }
  },
  "required": [],
  "additionalProperties": false
}
