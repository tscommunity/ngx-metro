{
  "name": "ngx-metro-demo",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch-lib": "ng build ngx-metro --watch",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "build-schematics": "tsc -p projects/ngx-metro/tsconfig.schematics.json --outDir dist/ngx-metro/schematics && cpx dist/ngx-metro/schematics/src/schematics/** dist/ngx-metro/schematics && cpx projects/ngx-metro/src/schematics/**/{collection.json,schema.json,files/**} dist/ngx-metro/schematics",
    "build-lib": "npm run build -- ngx-metro --prod && npm run build-schematics && cpx ./README.md ./dist/ngx-metro",
    "publish-lib": "npm run build-lib && cd ./dist/ngx-metro && npm publish",
    "publish-doc": "ng run ngx-metro-demo:deploy"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.2.17",
    "@angular/common": "~12.2.17",
    "@angular/compiler": "~12.2.17",
    "@angular/core": "~12.2.17",
    "@angular/forms": "~12.2.17",
    "@angular/platform-browser": "~12.2.17",
    "@angular/platform-browser-dynamic": "~12.2.17",
    "@angular/router": "~12.2.17",
    "@angular/service-worker": "~12.2.17",
    "core-js": "^2.5.4",
    "highlight.js": "^9.15.10",
    "linq4js": "^2.2.2",
    "metro4": "^4.3.7",
    "moment": "^2.24.0",
    "ngx-highlightjs": "^3.0.3",
    "rxjs": "~6.5.4",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.8"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^12.2.18",
    "@angular-devkit/build-ng-packagr": "~0.1002.4",
    "@angular/cli": "^12.2.18",
    "@angular/compiler-cli": "12.2.17",
    "@angular/language-service": "~12.2.17",
    "@angularclass/hmr": "^2.1.3",
    "@babel/core": "^7.6.0",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/jquery": "^3.3.22",
    "@types/node": "^12.11.1",
    "angular-cli-ghpages": "^0.6.0",
    "babel-loader": "^8.0.6",
    "codelyzer": "^5.1.2",
    "cpx": "^1.5.0",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.4.2",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^12.2.7",
    "protractor": "~7.0.0",
    "ts-node": "~7.0.0",
    "tslint": "~6.1.0",
    "typescript": "~4.3.5"
  }
}